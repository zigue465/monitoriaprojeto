#include <stdio.h>
#include <stdlib.h>

int main(){
   int sexo;
   float peso_ideal, altura;

   printf("digite a sua altura em m: ");
   scanf("%f", &altura);
   printf("1 - masculino\n2 - feminino\n");
   scanf("%d", &sexo);

   if (sexo == 1){
       peso_ideal = (72.2 * altura) - 58;
   } else if (sexo == 2){
       peso_ideal = (62.1 * altura) - 44.7;
   } else {
       printf ("sexo nao indentificado");
   }

   printf("o seu peso ideal eh: %.2f", peso_ideal);



    return 0;
}
